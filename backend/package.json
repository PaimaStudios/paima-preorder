{
  "name": "tarochi-sale-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon --exitcrash",
    "format": "npx prettier --write .",
    "gen-abi-types": "typechain --target ethers-v5 './src/abi/**/*.json' --out-dir ./src/typechain --always-generate-overloads",
    "clear-db": "npx ts-node ./src/scripts/clearDB.ts",
    "clear-db:dev": "cross-env NODE_ENV=development npx ts-node ./src/scripts/clearDB.ts",
    "build": "npm run gen-abi-types && swc src -d build --source-maps --copy-files",
    "start": "npm run build && cross-env NODE_ENV=production node build/index.js"
  },
  "license": "ISC",
  "devDependencies": {
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.16.3",
    "bunyan": "^1.8.15",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.22",
    "prettier": "^2.8.8",
    "prettier-plugin-organize-imports": "^3.2.2",
    "ts-node": "^10.9.1",
    "tsc-alias": "^1.8.6",
    "tsconfig-paths": "^4.2.0",
    "typechain": "^8.1.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@ethersproject/abstract-provider": "^5.7.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.56",
    "axios": "^1.4.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "config": "^3.3.9",
    "dotenv": "^16.0.3",
    "envalid": "^7.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "express-joi-validation": "^5.0.1",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "mongoose": "^7.1.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^4.7.1"
  }
}
